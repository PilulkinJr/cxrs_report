@article{1981Isler,
  author   = {R. C. Isler and L. E. Murray and S. Kasai and J. L. Dunlap and S. C. Bates and P. H. Edmonds and E. A. Lazarus and C. H. Ma and M. Murakami},
  title    = {Charge-exchange excitation and recombination of oxygen in the ISX-B tokamak},
